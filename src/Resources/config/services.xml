<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="true" />

        <service id="Esb\HealthCheckSymfony\Checks\DoctrineCheck" class="Esb\HealthCheckSymfony\Checks\DoctrineCheck">
            <argument type="service" id="service_container"/>
        </service>

        <service id="Esb\HealthCheckSymfony\Checks\RedisCheck" class="Esb\HealthCheckSymfony\Checks\RedisCheck">
            <argument type="service" id="service_container"/>
            <call method="setPredisClient">
                <argument type="service" id="Redis" on-invalid="null" />
            </call>
        </service>

        <service id="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConnectionResolver" class="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConnectionResolver" />
        <service id="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConsumerResolver" class="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConsumerResolver" />
        <service id="Esb\HealthCheckSymfony\Checks\RabbitMQ\RabbitMQCheck" class="Esb\HealthCheckSymfony\Checks\RabbitMQ\RabbitMQCheck">
            <argument type="service" id="service_container"/>
            <argument type="service" id="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConnectionResolver"/>
            <argument type="service" id="Esb\HealthCheckSymfony\Checks\RabbitMQ\ConsumerResolver"/>
        </service>

        <service id="Esb\HealthCheckSymfony\Checks\KafkaCheck" class="Esb\HealthCheckSymfony\Checks\KafkaCheck" />
        <service id="Esb\HealthCheckSymfony\Settings\KafkaSettings" class="Esb\HealthCheckSymfony\Settings\KafkaSettings" />
    </services>
</container>
